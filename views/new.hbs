<h1 class="mb-1 restaurant-show-title">新增餐廳</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <form action="/restaurants" method="POST">
        <div class="mb-3">
          <label for="name" class="form-label">店名
            <span class="text-danger">*</span>
          </label>
          <input type="text" class="form-control" id="name" name="name" placeholder="請輸入餐廳名稱..." required>
        </div>
        <div class="mb-3">
          <label for="name_en" class="form-label">英文店名</label>
          <input type="text" class="form-control" id="name_en" name="name_en" placeholder="請輸入餐廳英文名">
        </div>
        <div class="mb-3">
          <label for="category" class="form-label">類別</label>
          <span class="text-danger">*</span>
          <input type="text" class="form-control" id="category" name="category" placeholder="美式" required>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">圖片連結</label>
          <input type="text" class="form-control" id="image" name="image" placeholder="請輸入圖片連結">
        </div>
        <div class="mb-3">
          <label for="location" class="form-label">地址</label>
          <span class="text-danger">*</span>
          <input type="text" class="form-control" id="location" name="location" placeholder="台北市大安區..." required>
        </div>
        <div class="mb-3">
          <label for="phone" class="form-label">電話</label>
          <span class="text-danger">*</span>
          <input type="text" class="form-control" id="phone" name="phone" placeholder="02 2234 5678" required>
        </div>
        <div class="mb-3">
          <label for="google_map" class="form-label">Google地圖連結</label>
          <input type="text" class="form-control" id="google_map" name="google_map" placeholder="請輸入Google地圖連結">
        </div>
        <div class="mb-3">
          <label for="rating" class="form-label">評分</label>
          <span class="text-danger">*</span>
          <input type="number" class="form-control" id="rating" name="rating" placeholder="請輸入評分，最高5分" min="0" max="5"
            step="0.1" required>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">資訊</label>
          <span class="text-danger">*</span>
          <textarea class="form-control" id="description" rows="5" name="description" required></textarea>
        </div>
        <div class="text-end">
          <button type="submit" class="btn btn-primary">新增餐廳</button>
          <a href="/">
            <button type="button" class="btn btn-outline-secondary">返回</button>
          </a>
        </div>
      </form>
    </div>
  </div>
</div>